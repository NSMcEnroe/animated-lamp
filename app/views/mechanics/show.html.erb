<p>Mechanic: <%= @mechanic.name %></p>
<p>Years of Experience: <%= @mechanic.years_experience%></p>

<p>Current rides they're working on:</p>
<% @mechanic.rides.each do |ride| %>
  <p><%= ride.name %></p>
<% end %>

<p>Add a ride to workload:</p>
<%= form_with url: "/mechanics/#{@mechanic.id}", method: :patch, data: { turbo: false } do |form| %>
  <%= form.label :ride_id, "Ride ID" %>
  <%= form.text_field :ride_id %>
  <%= form.submit "Submit" %>
<% end %>